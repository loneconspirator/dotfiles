[alias]
  a = add
  aa = add --all
  ai = add --interactive
  b = branch
  ci = commit
  co = checkout
  cp = cherry-pick
  d = diff
  mup = !git checkout master && git pull && git checkout -
  nb = checkout -b
  ph = push
  pl = pull
  sh = stash -u
  sp = stash pop
  ss = status
  stage = push heroku master

  # From somewhere
  bsort = "!gb() { git branch --color=always $@ | sort -n; }; gb"
  conflicts = diff --name-only --diff-filter=U
  recent = "!gb() { num=${1-`echo 5`}; git for-each-ref --sort='-authordate' --format='%(refname:short)' refs/heads | head -n $num; }; gb"

  # From http://gggritso.com/human-git-aliases
  unstage = reset -q HEAD --
  discard = checkout --
  uncommit = reset --mixed HEAD~
  amend = commit --amend
  graph = log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
  precommit = diff --cached --diff-algorithm=minimal -w

  # git-town standard aliases
	append = town append
	hack = town hack
	kill = town kill
	new-pull-request = town new-pull-request
	prepend = town prepend
	prune-branches = town prune-branches
	rename-branch = town rename-branch
	repo = town repo
	ship = town ship
	sync = town sync
[core]
	editor = nvim
	pager = diff-so-fancy | less --tabs=2 -RFX
[fetch]
  prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[merge]
  ff = only
[pull]
	rebase = true
[push]
	default = upstream
[user]
	email = mike+github@technomonkey.net
	name = Mike McCracken

